{
  "name": "employee-handbook-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "postinstall": "npm rebuild lightningcss --target_platform=linux --target_arch=x64 || echo \"LightningCSS rebuild skipped\"",
    "debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "if [ -d .git ] || [ -f .git ]; then husky install; else echo \"Husky install skipped (not in a git repository)\"; fi",
    "pre-commit": "npm run lint",
    "test:firestore": "tsx src/test-firestore.ts",
    "tsc": "tsc",
    "tsc:test": "tsc -p tsconfig.test.json",
    "test": "npm run test:firestore"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.848.0",
    "@aws-sdk/lib-storage": "^3.848.0",
    "@aws-sdk/s3-request-presigner": "^3.848.0",
    "@clerk/clerk-react": "^5.32.0",
    "@clerk/nextjs": "^6.22.0",
    "@clerk/types": "^4.60.1",
    "@emailjs/browser": "^4.4.1",
    "@emailjs/nodejs": "^5.0.2",
    "@firebase/firestore": "^4.7.17",
    "@google/genai": "^1.10.0",
    "@headlessui/react": "^2.2.6",
    "@sentry/nextjs": "^8",
    "axios": "^1.10.0",
    "canvas-confetti": "^1.9.3",
    "dompurify": "^3.2.6",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "fs": "^0.0.1-security",
    "http2": "^3.3.6",
    "lucide-react": "^0.513.0",
    "marked": "^15.0.12",
    "net": "^1.0.2",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.58.0",
    "react-icons": "^5.5.0",
    "react-speech-recognition": "^4.0.1",
    "react-use-audio-recorder": "^0.4.2",
    "snakecase-keys": "8.1.0",
    "svix": "^1.68.0",
    "tls": "^0.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.58",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "husky": "^8.0.3",
    "jest": "^30.0.2",
    "lightningcss": "^1.25.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
